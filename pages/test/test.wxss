.position-round-top-right {
  position: relative;
  color: #ee0a24;
}
.position-round-top-right::before {
  content: "";
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 100%;
  height: 20px;
  border-radius: 0 20px 0 0;
  background: currentColor;
}
